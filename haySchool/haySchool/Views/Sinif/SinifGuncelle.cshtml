@model haySchool.Models.Sinif

@{
    ViewData["Title"] = "SinifGuncelle";
}


<hr />
<div class="form-group">
  
        <form asp-action="SinifGuncelle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                ID
                <input asp-for="sinif_id" class="form-control" />
                <span asp-validation-for="sinif_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                Şube
               
                <input asp-for="sinif_sube" class="form-control" />
              
                
                <span asp-validation-for="sinif_sube" class="text-danger"></span>
            </div>
            <div class="form-group">
                          Ogretmen
             @Html.DropDownListFor(x=>x.sinif_ogretmen_id, (List<SelectListItem>)ViewBag.v23,new{@class="form-control"})
                <span asp-validation-for="sinif_ogretmen_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                Mevcut
                <input asp-for="sinif_mevcut" class="form-control" />
                <span asp-validation-for="sinif_mevcut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
