@model haySchool.Models.Odeme

@{
    ViewData["Title"] = "OdemeEkle";
}


<hr />
<div class="form-group">
   
        <form asp-action="OdemeEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          @*  <div class="form-group">
               ID
                <input asp-for="odeme_id" class="form-control" />
                <span asp-validation-for="odeme_id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                Ödeme Tür ID
              @*  <input asp-for="odeme_odemetur_id" class="form-control" />*@
              @Html.DropDownListFor(x=>x.odeme_odemetur_id, (List<SelectListItem>)ViewBag.v1,new{@class="form-control"})
                <span asp-validation-for="odeme_odemetur_id" class="text-danger"></span>
            </div>
            <div class="form-group">
               Toplam Ödeme
                <input asp-for="odeme_toplam" class="form-control" />
                <span asp-validation-for="odeme_toplam" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ödenen
                <input asp-for="odeme_odenen" class="form-control" />
                <span asp-validation-for="odeme_odenen" class="text-danger"></span>
            </div>
            <div class="form-group">
               Kalan
                <input asp-for="odeme_kalan" class="form-control" />
                <span asp-validation-for="odeme_kalan" class="text-danger"></span>
            </div>
            <div class="form-group">
                İndirim
                <input asp-for="odeme_indirim" class="form-control" />
                <span asp-validation-for="odeme_indirim" class="text-danger"></span>
            </div>
             <div class="form-group">
                 Veli 
                 @Html.DropDownListFor(x=>x.odeme_veli_id, (List<SelectListItem>)ViewBag.v5,new{@class="form-control"})
                <span asp-validation-for="odeme_veli_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
