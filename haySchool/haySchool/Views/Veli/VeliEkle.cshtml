@model haySchool.Models.Veli

@{
    ViewData["Title"] = "VeliEkle";
}




<hr />
<div class="form-group">

        <form asp-action="VeliEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                Veli Adı
                <input asp-for="veli_adi" class="form-control" />
                <span asp-validation-for="veli_adi" class="text-danger"></span>
            </div>
            <div class="form-group">
             Veli Soyadı
                <input asp-for="veli_soyadi" class="form-control" />
                <span asp-validation-for="veli_soyadi" class="text-danger"></span>
            </div>
            <div class="form-group">
               Veli Telefon 
                <input asp-for="veli_telno" class="form-control" />
                <span asp-validation-for="veli_telno" class="text-danger"></span>
            </div>
            <div class="form-group">
             Veli Adres
                <input asp-for="veli_adres" class="form-control" />
                <span asp-validation-for="veli_adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
