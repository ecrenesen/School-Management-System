@model haySchool.Models.Taksit

@{
    ViewData["Title"] = "TaksitGuncelle";
}

<hr />
<div class="form-group">
   
        <form asp-action="TaksitGuncelle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                ID
                <input asp-for="taksit_id" class="form-control" />
                <span asp-validation-for="taksit_id" class="text-danger"></span>
            </div>
            <div class="form-group">
               Ödeme ID
                <input asp-for="taksit_odeme_id" class="form-control" />
                <span asp-validation-for="taksit_odeme_id" class="text-danger"></span>
            </div>
            <div class="form-group">
              Taksit Tarih
                <input asp-for="taksit_tarih" class="form-control" />
                <span asp-validation-for="taksit_tarih" class="text-danger"></span>
            </div>
            <div class="form-group">
               Tutar
                <input asp-for="taksit_tutar" class="form-control" />
                <span asp-validation-for="taksit_tutar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
